.account-page__inner.clearfix
  .account-page__inner--left.account-page__header
    %diva%h2 Edit %Account
    %h5 アカウントの編集
    = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'bth'
    = link_to "トップページに戻る", :back, class: 'bsh'
  .account-page__inner--right.user-form
    = form_for(current_user) do |f|
      .field  
        .field-label
          = f.label, :name
        .field-input
          = f.text_field :name, autofocus: true
      .field
        .field-label
          = f.label, :email
        .field-input
          = f.mail_field :email    
      .actions
        = f.submit "Update", class: 'btn'

